<h2>Categories list</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success"> Add new category</button></a>

{{#each categories}}
<div class="card mt-4">
    <div class="card-body">
        
        <form action="/admin/categories/delete" method="post" style="float:right;">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        
        <h4>{{name}}</h4>
        <small>Create at: {{#formatDate date}}{{/formatDate}} </small><hr>
        <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-success btn-sm"> Edit</button></a>
        
        

    </div>
</div>

{{else}}

{{/each}}